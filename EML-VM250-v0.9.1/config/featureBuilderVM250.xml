  <fold>
    <name>training.realnorm</name>
    <foldId>16 16</foldId>
    <recordIds extern="NORMids.txt"/>
    <requestedRecords ref_id="records"/>
    <classification>
      <actionRelease/>
      <sourceNORM/>
    </classification>
  </fold>
