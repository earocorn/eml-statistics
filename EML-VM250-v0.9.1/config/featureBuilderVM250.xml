  <fold>
    <name>training.am241</name>
    <foldId>1 10</foldId>
    <recordIds extern="nonemittingTraining.txt"/>
    <requestedRecords ref_id="records"/>
    <classification>
      <actionInvestigate/>
      <sourceIndustrial/>
    </classification>
    <source1>
      <sourceId>40000 40058</sourceId>
      <where>1</where>
      <label>Industrial</label>
